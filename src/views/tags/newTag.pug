extends /layouts/main-layout.pug

include /mixins/forms.pug

block content
  .row.justify-content-md-center
    .col-md-5.my-3
      form(action=urlFor('addTag') method='post' novalidate)
        h5.my-3.text-center.font-weight-normal New tag
        +createInputGroup('name', 'text', 'Tag name', form, errors)
        .form-group
          button.btn.btn-primary(type='submit') Create