extends /layouts/main-layout.pug

include /mixins/forms.pug

block content
  .row.mt-3.justify-content-center
    form(action=urlFor('profile') method='post' novalidate)
      h1.h5.my-3.text-center.font-weight-normal Edit profile
      input(name='_method' type='hidden' value='put')
      .form-group
        label(for='inputId') User id
        input(type='text' name='inputId' value=user.id id='inputId' class='form-control' disabled)
      .form-group
        label(for='inputEmail') Email
        input(type='email' name='inputEmail' value=user.email id='inputEmail' class='form-control' disabled)
      .form-group
        label(for='inputFirstName') First name
        input(type='text' name='inputFirstName' value=user.firstName id='inputFirstName' class='form-control')
      .form-group
        label(for='inputLastName') Last name
        input(type='text' name='inputLastName' value=user.lastName id='inputLastName' class='form-control')
      .form-group
        button(class='btn btn-primary btn-block' type='submit') Update profile
        button.btn.btn-danger.btn-block(type='button' data-toggle='modal' data-target='#deleteUser') Delete account

  .modal.fade(id='deleteUser' tabIndex='-1' role='dialog' aria-labeledby='deleteUserModalLabel' aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5.modal-title(id='deleteUserModalLabel') Delete account confirmation
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body Delete account? The operation is permanent.
        .modal-footer
          form.form-inline(action=urlFor('deleteUser') method='post')
            input(name='_method' type='hidden' value='delete')
            button.btn.btn-outline-secondary.mr-3(data-dismiss='modal' type='button') Cancel
            button.btn.btn-danger(type='submit') Delete